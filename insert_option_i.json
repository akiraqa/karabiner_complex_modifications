{
    "title": "insert by Option+I",
    "rules": [
        {
            "description": "insert by Option+I",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "i",
                        "modifiers": {
                            "mandatory": [
                                "option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "insert"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^com\\.apple\\.Terminal$",
                                "^md\\.obsidian$"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}