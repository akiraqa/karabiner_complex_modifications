{
  "title": "copy&paste by Ctrl(c/x/v/a/z)",
  "rules": [
    {
      "description": "copy&paste by Ctrl(c/x/v/a/z)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "c",
              "modifiers": [
                  "left_command"
                ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": ["^com\\.apple\\.Terminal$",
                                "^com\\.microsoft\\.VSCode$"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "x",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "x",
              "modifiers": [
                  "left_command"
                ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "v",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "v",
              "modifiers": [
                  "left_command"
                ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "a",
              "modifiers": [
                  "left_command"
                ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": ["^com\\.apple\\.Terminal$",
                                "^com\\.microsoft\\.VSCode$"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "z",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "z",
              "modifiers": [
                  "left_command"
                ]
            }
          ]
        }
      ]
    }
  ]
}